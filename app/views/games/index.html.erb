<h1>My Games</h1>

<% @games.each do |game| %>

  <% game_name = game.theme.name +
    " with " +
    game.users.map{|user| user.name.capitalize }.join(", ") %>

  <%= link_to game_name, game_url(game) %>
  <%= "<alert>New Notifications!</alert>".html_safe if game.new_notifications?(current_user) %>
  <br>
<% end %>

<div class="buttons">
  <a href="/" class="button">Main Menu</a>
  <a href="/games/new" class="button">New Game</a>
</div>